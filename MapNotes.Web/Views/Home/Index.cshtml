@{
    ViewBag.Title = "MapNotes";
}

<div ng-controller="mapController">
    
    <div class="row">
        <div class="col-md-12">
            <div id="map"></div>
        </div>
    </div>

    <div class="row" ng-show="isLoaded">
        <div class="col-md-6">
            <br/>
            <b>Заметки в радиусе 2км от центра карты:</b>
            <ul>
                <li ng-repeat="x in nearestNotes track by $index">
                    {{ x }}
                </li>
            </ul>
        </div>
        <div class="col-md-6">
            <br/>

            <div ng-hide="addNoteActive">
                <button ng-click="addNote()" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Добавить заметку</button>
            </div>
            
            <div ng-show="addNoteActive">
                <b>Добавить заметку</b>
                <br/><br />
                <input type="text" class="form-control" ng-model="addNoteTitle" maxlength="200">
                <br/>
                <button class="btn btn-success" ng-click="saveNote()">Добавить</button>
            </div>
        </div>
    </div>

</div>

